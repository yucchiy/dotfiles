for f (~/.zsh/sources/peco/*) source "${f}"

eval "$(direnv hook zsh)"

# enable oh-my-zsh
plugins=(brew bundler git git-extras rbenv vagrant github docker)
source $ZSH/oh-my-zsh.sh

